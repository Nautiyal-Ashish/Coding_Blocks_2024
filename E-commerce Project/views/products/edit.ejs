<% layout('layouts/boilerplate') %> <%- include('../partials/navbar') %>

<div class="row">
  <div class="col-4 mx-auto">
    <form action="/products/<%=foundProduct._id%>?_method=PATCH" method="POST">
      <div class="mb-3">
        <label for="naam">Name: </label>
        <input
          type="text"
          class="form-control"
          name="name"
          id="naam"
          placeholder="Name of the Product"
          value="<%=foundProduct.name%>"
        />
      </div>
      <div class="mb-3">
        <label for="img">Image: </label>
        <input
          type="text"
          class="form-control"
          name="img"
          id="img"
          placeholder="Image URL of the Product"
          value="<%=foundProduct.img%>"
        />
      </div>
      <div class="mb-3">
        <label for="paisa">Price: </label>
        <input
          type="number"
          class="form-control"
          name="price"
          id="paisa"
          placeholder="Enter the Price of the Product"
          value="<%=foundProduct.price%>"
        />
      </div>
      <div class="mb-3">
        <label for="desc">Description: </label>
        <textarea
          name="desc"
          id="desc"
          rows="5"
          cols="40"
          placeholder="Add Description of the Product"
        >
          <%=foundProduct.name%>
    </textarea
        >
      </div>
      <button type="submit" class="btn btn-success btn-sm">Edit Product</button>
    </form>
  </div>
</div>
